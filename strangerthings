  <script>
const episodesPerSeason = { "1":8, "2":9, "3":8, "4":9, "5":8 };
const episodeData = {
  "1-1": { title: "Chapter One: The Vanishing of Will Byers", description: "Description for S1E1" },
  "1-2": { title: "Chapter Two: The Weirdo on Maple Street", description: "Description for S1E2" },
  ...
  "1-8": { title: "Chapter Eight: The Upside Down", description: "Description for S1E8" },

  "2-1": { title: "Chapter One: MADMAX", description: "Description for S2E1" },
  ...
  "2-9": { title: "Chapter Nine: The Gate", description: "Description for S2E9" },

  "3-1": { title: "Chapter One: Suzie, Do You Copy?", description: "Description for S3E1" },
  ...
  "3-8": { title: "Chapter Eight: The Battle of Starcourt", description: "Description for S3E8" },

  "4-1": { title: "Chapter One: The Hellfire Club", description: "Description for S4E1" },
  ...
  "4-9": { title: "Chapter Nine: The Piggyback", description: "Description for S4E9" },

  "5-1": { title: "The Crawl", description: "Not released yet (Season 5)" },
  "5-2": { title: "The Vanishing Of ___", description: "Not released yet (Season 5)" },
  ...
  "5-8": { title: "The Rightside Up", description: "Not released yet (Season 5)" }
};



function updateEpisodes() {
  const season = document.getElementById("seasonSelect").value;
  const episodeSelect = document.getElementById("episodeSelect");
  episodeSelect.innerHTML = "";
  const count = episodesPerSeason[season];
  for (let i = 1; i <= count; i++) {
    const option = document.createElement("option");
    option.value = i;

    const watchedKey = `watched-${season}-${i}`;
    const isWatched = localStorage.getItem(watchedKey) === "true";
    option.textContent = isWatched ? `âœ… ${i}` : `${i}`;

    episodeSelect.appendChild(option);
  }
  updateEpisodeInfo();
}


function updateEpisodeInfo() {
  const season = document.getElementById("seasonSelect").value;
  const episode = document.getElementById("episodeSelect").value;
  const key = `${season}-${episode}`;
  const info = episodeData[key];
  const container = document.getElementById("episodeInfo");
  const watchButton = document.getElementById("watchButton");

  // ðŸ”½ Add this block right here:
  if (season === "5") {
    watchButton.disabled = true;
    container.innerHTML = `<h2>${info.title}</h2><p><em>${info.description}</em></p><p style="color: #ccc;"><strong>This episode is not released yet.</strong></p>`;
    return; // prevent continuing to normal rendering
  }

  // âœ… Normal rendering for released episodes
  if (info) {
    container.innerHTML = `<h2>${info.title}</h2><p>${info.description}</p>`;
    watchButton.disabled = false;

    const watchedKey = `watched-${season}-${episode}`;
    const isWatched = localStorage.getItem(watchedKey) === "true";
    if (isWatched) {
      container.innerHTML += `<p style="color: #00ff99;"><strong>âœ” Youâ€™ve watched this episode</strong></p>`;
    }
  } else {
    container.innerHTML = `<h2>Season ${season} â€“ Episode ${episode}</h2><p>No description available yet.</p>`;
    watchButton.disabled = false;
  }
}



    function openInNewTab() {
  const season = document.getElementById("seasonSelect").value;
  const episode = document.getElementById("episodeSelect").value;
  const key = `watched-${season}-${episode}`;
  localStorage.setItem(key, "true");

  const url = `https://multiembed.mov/directstream.php?video_id=tt0362359&s=${season}&e=${episode}`;
  window.open(url, '_blank');

  updateEpisodeInfo(); // refresh UI
}


window.onload = () => {
  updateEpisodes();
  updateEpisodeInfo();
};

  </script>

